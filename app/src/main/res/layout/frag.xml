<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#520F0E0E"
        android:clickable="true"
        android:focusable="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/MonProfile"
            android:id="@+id/back_button1"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/back_button"/>

    <RelativeLayout
            android:background="@drawable/border_bio"
            android:layout_width="match_parent"
            android:layout_below="@id/back_button"
            android:layout_height="250dp"
            android:clickable="false"
            android:elevation="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/MonProfile">

        <ImageView
                android:id="@+id/profile_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="15dp"/>

        <TextView
                android:id="@+id/pseudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile_img"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/profile_img"
                android:textSize="18sp"
                android:textColor="#090808"
                tools:ignore="RelativeOverlap"/>

        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/psn"
                android:layout_height="wrap_content"
                android:layout_below="@id/pseudo"
                android:layout_toEndOf="@id/profile_img"
                android:layout_marginTop="-7dp"
                android:textSize="15sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/console"
                android:layout_height="wrap_content"
                android:layout_below="@id/psn"
                android:layout_toEndOf="@id/profile_img"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="25dp"
                android:textSize="13sp"/>

        <ImageView
                android:layout_marginBottom="20dp"
                tools:ignore="ContentDescription"
                android:layout_marginStart="28dp"
                android:id="@+id/headset"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_headset_"
                android:layout_width="38dp"
                android:layout_height="38dp"/>

        <ImageView
                android:layout_marginBottom="20dp"
                android:layout_marginStart="28dp"
                tools:ignore="ContentDescription"
                android:id="@+id/no_headset"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_diagonale"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:visibility="gone"/>

        <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/close_profile"
                tools:ignore="ContentDescription"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_close_empty"
                android:layout_marginEnd="28dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <ImageView
                android:id="@+id/send_mail_to"
                tools:ignore="ContentDescription"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_letter"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        <ImageView
                android:id="@+id/more_profile"
                tools:ignore="ContentDescription"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="9dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_more"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        <RelativeLayout
                android:background="@drawable/border_bio"
                android:layout_width="match_parent"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="80dp"
                android:layout_marginStart="75dp"
                android:padding="5dp"
                android:layout_height="110dp"
                android:layout_below="@id/console">

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
