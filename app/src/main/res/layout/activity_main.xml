<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="match_parent"
  android:layout_width="match_parent">

  <ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent">

      <TextView
        android:id="@+id/tv_hello_world"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"/>

      <ListView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:padding="10dp"
        android:layout_below="@id/tv_hello_world"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/list_panel"/>

      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/list_panel"
        android:id="@+id/alert_dialog_button"
        android:text="@string/AlertDialogButton"/>
      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/alert_dialog_button"
        android:id="@+id/frag_dialog_button"
        android:text="@string/FragmentButton"/>
      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/frag_dialog_button"
        android:id="@+id/tab_activity_button"
        android:text="@string/TabActivityButton"/>

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_below="@id/tab_activity_button"
        android:id="@+id/username_view"/>
      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email@email.com"
        android:layout_below="@id/username_view"
        android:id="@+id/email_view"/>
      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pas$w0rd!"
        android:layout_below="@id/email_view"
        android:id="@+id/password_view"/>

      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_view"
        android:id="@+id/registration_button"
        android:text="S'enregistrer"/>
      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_button"
        android:id="@+id/get_users_button"
        android:text="GetUsers"/>

      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_users_button"
        android:id="@+id/qrcode"
        android:text="QRcode"/>



    </RelativeLayout>
  </ScrollView>
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/frag"/>
</RelativeLayout>
